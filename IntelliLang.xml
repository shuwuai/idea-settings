<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="HTML" injector-id="xml">
      <display-name>font/@color</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("color")).withParent(xmlTag().withLocalName(string().equalTo("font")).withNamespace(string().equalTo("http://www.w3.org/1999/html")))]]></place>
    </injection>
  </component>
</application>